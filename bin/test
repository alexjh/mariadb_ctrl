#!/bin/sh
# vim: set ft=sh

set -e

if ! which go 2>/dev/null; then
  echo "Go is not installed."
  exit 1
fi

go fmt ./...
go build ./...

go test -v -race ./mariadb_start_manager
go test -v -race ./os_helper
go test -v -race ./galera_helper
go test -v -race ./mariadb_helper
go test -v -race ./upgrader
